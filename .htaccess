# Disable automatic compression for JS files
<FilesMatch "\.(js|css)$">
    SetEnv no-gzip 1
</FilesMatch>

# Prevent caching issues
<IfModule mod_headers.c>
    <FilesMatch "\.(js|css)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires 0
    </FilesMatch>
</IfModule>
